name: 一键打包APK

on: 
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: 拉取代码
      uses: actions/checkout@v3
      
    - name: 打包APK
      run: |
        chmod +x gradlew
        ./gradlew assembleDebug
    
    # ▼▼▼ 这4行要放在外面，独立成为一个步骤！▼▼▼
    - name: 上传APK供下载
      uses: actions/upload-artifact@v3
      with:
        name: ONO-APK
        path: app/build/outputs/apk/debug/*.apk
    # ▲▲▲ 注意：这4行前面要有空格，但不在run管道内 ▲▲▲
