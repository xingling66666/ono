name: 一键打包APK

on: 
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: 拉取代码
      uses: actions/checkout@v3
      
    - name: 打包APK
      run: |
        chmod +x gradlew
        ./gradlew assembleDebug
        
    - name: 生成下载链接
      uses: actions/upload-artifact@v3
      with:
        name: ono-app
        path: app/build/outputs/apk/debug/*.apk
